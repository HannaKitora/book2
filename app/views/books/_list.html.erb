<%= flash[:notice] %>

<% if book.errors.any? %>
  <%= book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto">
      <h1>User info</h1>
      <%= image_tag user.get_profile_image(150,150) %>
      <table class="table table-striped">
        <tbody>
          <tr>
            <td>name</td>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <% if user == current_user %>
        <p>
          <%= link_to edit_user_path(user.id) %><i class="fa-solid fa-user-gear"></i>
        </p>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto">
      <h1 class="text-dark pb-2 mb-0">New book</h1>
      <div class="book">
        <%= form_with model: book do |f| %>
          <p>Title</p>
          <%= f.text_field :title, class: "form-control" %>
          <p>Opinion</p>
          <%= f.text_area :body, class: "form-control" %>
          <br>
          <%= f.submit 'Create Book', class: "btn btn-info mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

