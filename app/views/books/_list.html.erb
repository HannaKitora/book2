<%= flash[:notice] %>

<% if book.errors.any? %>
  <%= book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <h1>User info</h1>
    <%= image_tag user.get_profile_image(150,150) %>
    <table class="table table-striped">
      <tbody>
        <tr>
          <td>name</td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
    </table>
    <% if user == current_user %>
      <p><%= link_to "設定", edit_user_path(user.id) %></p>
    <% end %>
  </div>
    
    <h1>New book</h1>
    <div class="book">
      <%= form_with model: book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
</div>
