<%= render 'list', book: @book_new, user: @user %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto">
      <h1>Book detail</h1>
      
      <table class="table table-striped">
        <tbody>
          <tr>
            <th scope="col">
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <%= link_to @user.name, user_path(@user.id) %>
            </th>
            <th scope="col">
              <%= link_to @book.title, book_path(@book.id) %>
            </thv>
            <th scope="col">
              <%= @book.body %>
            </th>
            <% if @book.user == current_user %>
              <th scope="col">
                <%= link_to "Edit", edit_book_path(current_user) %>
              </th>
              <th scope="col">
                <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
              </th>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>