<div class="container">
  <div class="row">
    <%= render 'list', book: @book_new, user: @user %>
    
    <div class="col-md-8 offset-md-1 col-sm-10 mx-2 mx-sm-auto">
      <h2>Book detail</h2>
      
      <table class="table">
        <tbody>
          <tr>
            <th scope="col">
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
              <% end %>
              <br>
              <%= link_to @user.name, user_path(@user.id) %>
            </th>
            <th scope="col">
              <%= link_to @book.title, book_path(@book.id) %>
            </th>
            <th scope="col">
              <%= @book.body %>
            </th>
            <% if @book.user == current_user %>
              <th class="btn btn-md btn-info">
                <%= link_to "Edit", edit_book_path(@book.id) %>
              </th>
              <th class="btn btn-md btn-danger">
                <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
              </th>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>