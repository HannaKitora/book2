

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">Editing Book</h5>
      <div class="form-body p-4">
        <%= form_with model: @book do |f| %>
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle"%>
          <br>
          <label for="inputOpinion">Opinion</label>
          <%= f.text_field :body, class: "form-control", autofocus: true, id:"inputOpinion" %>
          <br>
          <%= f.submit "Update Book", class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
        <%= link_to "Show", user_path(current_user) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>