<%= render 'books/list', book: @book, books: @books, user: @user %>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1 col-sm-10 mx-2 mx-sm-auto">
      
      <h2>Books</h2>

 
        <div class="col-lg">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Title</th>
                <th scope="col">Opinion</th>
              </tr>
            </thead>
            
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <th scope="row">
                    <%= image_tag book.user.get_profile_image(100,100) %>
                </th>
                <td>
                  <%= link_to book.title, book_path(book.id) %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>