<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">User info</h5>
      <div class="form-body p-4">
        <%= form_with model: @user do |f| %>
          <label for="inputName">Name</label>
          <%= f.text_field :name, class: "form-control", autofocus: true, id:"inputName"%>
          <br>
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*", class: "w-100" %>
          <br>
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, class: "form-control", autofocus: true, id:"inputIntroduction" %>
          <br>
          <%= f.submit "Update User", class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>