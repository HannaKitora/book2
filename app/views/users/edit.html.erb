<h1>User info</h1>


<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
  <label for="inputIntroduction">Introduction</label></label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>
  <%= f.submit "Update User" %>
<% end %>