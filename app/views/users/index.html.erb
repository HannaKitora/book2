<%= render 'books/list', book: @book, user: @user %>

<h2>Users</h2>
<% @users.each do |user| %>
  <div class="col-lg-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">image</th>
          <th scope="col">name</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="col">
            <%= image_tag user.get_profile_image(100,100) %>
          </th>
          <th scope="col">
            <%= user.name %>
          </th>
          <th scope="col">
            <%= link_to "Show", user_path(user.id) %>
          </th>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>