<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/01ed44febb.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar p-1 text-white" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <div class="navbar-nav ml-auto">

            <% if user_signed_in? %>
              <div class="nav-item">
                <%= link_to user_path(current_user) do %>
                  <i class="fa-solid fa-house"></i>Home
                <% end %>
              </div>
              <div class="nav-item">
                <%= link_to users_path do %>
                  <i class="fa-solid fa-users"></i>Users
                <% end %>
              </div>
              <div class="nav-item">
                <%= link_to books_path do %>
                 <i class="fa-solid fa-book-open"></i>Books
                <% end %>
              </div>
              <div class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete } do %>
                  <i class="fa-solid fa-right-from-bracket"></i>Log out
                <% end %>
              </div>

            <% else %>
              <div class="nav-item">
                <%= link_to root_path do %>
                  <i class="fa-solid fa-house"></i>Home
                <% end %>
              </div>
              <div class="nav-item">
                <%= link_to about_path do %>
                  <i class="fa-solid fa-link"></i>About
                <% end %>
              </div>
              <div class="nav-item">
                <%= link_to new_user_registration_path do %>
                  <i class="fa-solid fa-user-plus"></i>Sign up
                <% end %>
              </div>
              <div class="nav-item">
                <%= link_to new_user_session_path do %>
                  <i class="fa-solid fa-right-to-bracket"></i>Log in
                <% end %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
    <%= yield %>
    </main>
    
    <footer class="text-black pt-5 pb-4">
      <div class="container">
        <div class="d-flex justify-content-center">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>
